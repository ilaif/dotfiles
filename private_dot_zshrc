# FORPROFILING:
PROFILING_ENABLED=0
if [[ "$PROFILING_ENABLED" == "1" ]]; then
  zmodload zsh/zprof
fi
timezsh() {
  shell=${1-$SHELL}
  for i in $(seq 1 4); do /usr/bin/time $shell -i -c exit; done
}

if type brew &>/dev/null; then
  FPATH=/opt/homebrew/share/zsh/site-functions:$FPATH
  autoload -Uz compinit
  for dump in ~/.zcompdump(N.mh+24); do; compinit; done
  compinit -C
fi

# Path
export GOPATH="$HOME/go"

export PATH="$GOPATH/bin:$PATH"
export PATH="/opt/homebrew/bin:$PATH"
export PATH="$HOME/.tmux/plugins/t-smart-tmux-session-manager/bin:$PATH"
export PATH="$HOME/.local/bin:$PATH"
export PATH="/usr/local/sbin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/X11/bin:/usr/local/git/bin:/tools:/platform-tools:$HOME/bin:$PATH"
export PATH="/opt/homebrew/opt/diffutils/bin:$PATH" # Needed for golangci-lint
export PATH="${KREW_ROOT:-$HOME/.krew}/bin:$PATH"
export PATH="$HOME/.dotnet/tools:$PATH"
export PATH="$HOME/.cargo/bin:$PATH"
export PATH="/opt/homebrew/opt/openjdk/bin:$PATH"

# Environment
export TERM="xterm-256color"
export ZSH=$HOME/.oh-my-zsh
ZSH_THEME="muse"
DISABLE_MAGIC_FUNCTIONS=true
ZSH_DISABLE_COMPFIX=true
export HISTDB_FZF_DEFAULT_MODE=3
export AWS_PAGER=
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

plugins=(
  git
  fzf-tab
  zsh-completions
  zsh-autosuggestions
  zsh-syntax-highlighting
  zsh-histdb
  colored-man-pages
  brew
  python
  virtualenv
  colorize
  github
  macos
  npm
  node
  docker
  docker-compose
  aws
  kubectl
  poetry
  mise
  pnpm
)

source "$ZSH/oh-my-zsh.sh"

# pnpm
export PNPM_HOME="$HOME/Library/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac
# pnpm end

eval "$(devbox global shellenv --init-hook)"

eval "$(starship init zsh)"
eval "$(zoxide init zsh)"
eval "$(direnv hook zsh)"
source "$HOME/.oh-my-zsh/custom/plugins/zsh-histdb-fzf/fzf-histdb.zsh"
bindkey '^R' histdb-fzf-widget
source "/opt/homebrew/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/path.zsh.inc"
source "/opt/homebrew/Caskroom/google-cloud-sdk/latest/google-cloud-sdk/completion.zsh.inc"
eval "$(github-copilot-cli alias -- "$0")"
[ -f /usr/local/bin/kubectl ] && source <(kubectl completion zsh)
[ -f "$HOME/.aliases" ] && source $HOME/.aliases
[ -f "$HOME/.hooks" ] && source $HOME/.hooks
[ -f "$HOME/.secrets/env" ] && source $HOME/.secrets/env

#export GITHUB_TOKEN=$(gh auth token)

if [[ "$PROFILING_ENABLED" == "1" ]]; then
  zprof; zmodload -u zsh/zprof
fi
